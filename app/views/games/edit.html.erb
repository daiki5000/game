<div class="text-center">
  <h1>ゲーム情報編集</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @game, local: true) do |f| %>
      
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
      
      <div class="form-group">  
        <%= f.label :author, '開発元' %>
        <%= f.text_field :author, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :distributor, '販売元' %>
        <%= f.text_field :distributor, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :platform, 'プラットフォーム' %>
        <%= f.select :platform, [["SP","SP"],["PC","PC"],["Switch","Switch"],["Xbox","Xbox"],["PS4","PS4"]], include_blank: "選択して下さい" %>
      </div>
      
      <div class="form-group">
        <%= f.label :release, '発売日' %>
        <%= f.text_field :release, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :play, 'プレイした日' %>
        <%= f.text_field :play, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :registration, '登録日' %>
        <%= f.text_field :registration, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :renewal, '更新日' %>
        <%= f.text_field :renewal, class: 'form-control' %>
      </div>
      
      <%= f.submit '登録', class: 'btn btn-success btn-block' %>
    <% end %>
